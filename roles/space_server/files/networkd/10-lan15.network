RouterPreference=medium
EmitDNS=yes
DNS=2a01:4262:1ab::
DNSLifetimeSec=14400

[IPv6Prefix]
Prefix=2a01:4262:1ab:f::/64
ValidLifetimeSec=86400
PreferredLifetimeSec=14400
